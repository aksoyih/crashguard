{
    "name": "aksoyih/crashguard",
    "description": "Universal PHP error handling package with enhanced debugging features and LLM-ready output",
    "type": "library",
    "keywords": [
        "error-handling",
        "debugging",
        "php",
        "exception",
        "universal",
        "framework-agnostic"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "aksoyih",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Aksoyih\\Crashguard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aksoyih\\Crashguard\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}